<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    >

    <TableLayout
            android:id="@+id/scoreContainer"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TableRow>

                <TextView
                    android:id="@+id/txtPlayerScore"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/accent"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/accent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>
                <Button
                    android:id="@+id/btnSubmit"
                    android:background="@drawable/shape"
                    android:text="Submit"
                    android:textSize="11sp"
                    android:textColor="@color/primary_text"
                    android:layout_span="1"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    />
                <Button
                    android:id="@+id/btnClear"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape"
                    android:text="Clear"
                    android:textSize="11sp"
                    android:textColor="@color/primary_text"
                    android:layout_span="1"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    />
                <Button
                    android:id="@+id/btnDone"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/btnSubmit"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape"
                    android:text="Done"
                    android:textSize="11sp"
                    android:textColor="@color/primary_text"
                    android:layout_span="1"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:onClick="onDoneButtonClick"
                    />
                <Button
                    android:id="@+id/btnShowAll"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape"
                    android:text="Show"
                    android:textSize="11sp"
                    android:textColor="@color/primary_text"
                    android:layout_span="1"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:onClick="onShowButtonClick"
                    />
            </TableRow>
        </TableLayout>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/scoreContainer"
    android:gravity="center">
    <TableRow>
        <TextView
            android:id="@+id/txtCurrentWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/accent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"/>
    </TableRow>
    <TableRow>
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_below="@id/scoreContainer"
            android:layout_gravity="center">

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="1" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="2" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="3" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="4" android:layout_row="1"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="1" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="2" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="3" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="4" android:layout_row="2"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="1" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="2" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="3" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="4" android:layout_row="3"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="1" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="2" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="3" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="85dp" android:layout_width="85dp" android:layout_column="4" android:layout_row="4"/>

        </GridLayout>
    </TableRow>
    <TableRow
        android:layout_marginTop="10dp">
        <ListView
            android:id="@+id/listSubmittedWords"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_below="@id/gridLayout"
            android:layout_marginLeft="5dp"
            android:background="#ddf5d286"
            android:spinnerMode="dropdown"/>
    </TableRow>
</TableLayout>




</RelativeLayout>




