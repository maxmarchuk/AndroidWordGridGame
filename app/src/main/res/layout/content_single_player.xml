<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/gameContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >
        <TableLayout
            android:id="@+id/scoreContainer"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TableRow>
                <TextView
                    android:id="@+id/txtPlayerScoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: "
                    android:textColor="@color/primary_light"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPlayerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/accent"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/timerContainer"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TableRow>
                <TextView
                    android:id="@+id/txtTimerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textColor="@color/primary_light"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/accent"
                        android:textSize="28dp"
                        android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/gridButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/yellowbutton9patch"
                    android:text="Submit"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/yellowbutton9patch"
                    android:text="Clear"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btnDone"
                    android:layout_below="@id/btnSubmit"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/yellowbutton9patch"
                    android:text="Done"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:onClick="onDoneButtonClick"
                    />
            </TableRow>
        </TableLayout>
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_above="@id/gridButtons"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
                >
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="1" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="2" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="3" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="4" android:layout_row="1"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="1" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="2" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="3" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="4" android:layout_row="2"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="1" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="2" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="3" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="4" android:layout_row="3"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="1" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="2" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="3" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="65dp" android:layout_width="65dp" android:layout_column="4" android:layout_row="4"/>

        </GridLayout>

        <ListView
            android:id="@+id/listSubmittedWords"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/gridLayout"
            android:layout_toStartOf="@id/gridLayout"
            android:layout_marginRight="5dp"
            android:layout_above="@id/gridButtons"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@color/primary"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_alignLeft="@id/gridLayout"
            android:background="@color/primary"
            android:id="@+id/txtCurrentWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@id/listSubmittedWords"
            android:layout_alignEnd="@id/gridLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_above="@id/gridLayout"
            android:textColor="@color/accent"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textSize="50dp"
            android:textStyle="bold"/>

    </RelativeLayout>
</RelativeLayout>
