<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/gameContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >

        <TableLayout
            android:id="@+id/scoreContainer"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TableRow>
                <TextView
                    android:id="@+id/txtPlayerScoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: "
                    android:textColor="@color/primary_light"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPlayerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/accent"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/timerContainer"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TableRow>
                <TextView
                    android:id="@+id/txtTimerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textColor="@color/primary_light"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/accent"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/scoreContainer"
            android:gravity="center"
                >
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="1" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="2" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="3" android:layout_row="1"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="4" android:layout_row="1"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="1" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="2" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="3" android:layout_row="2"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="4" android:layout_row="2"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="1" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="2" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="3" android:layout_row="3"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="4" android:layout_row="3"/>

                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="1" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="2" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="3" android:layout_row="4"/>
                <Button android:background="@drawable/bluebutton9patch" android:layout_height="60dp" android:layout_width="60dp" android:layout_column="4" android:layout_row="4"/>

        </GridLayout>



        <TextView
            android:id="@+id/txtCurrentWordLabel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/gridLayout"
            android:layout_below="@+id/gridLayout"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Word:"
            android:textColor="@color/primary_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCurrentWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/gridLayout"
            android:layout_toEndOf="@id/txtCurrentWordLabel"
            android:layout_alignRight="@id/gridLayout"
            android:textColor="@color/primary_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/gridButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCurrentWordLabel"
            android:layout_alignLeft="@id/gridLayout"
            android:layout_alignRight="@id/gridLayout">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@color/accent"
                android:text="Submit"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@color/accent"
                android:text="Clear"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/btnSubmit"
                android:layout_marginTop="10dp"
                android:background="@color/accent"
                android:text="Done"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
        </RelativeLayout>


        <ListView
            android:id="@+id/listSubmittedWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridButtons"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/gridButtons"
            android:layout_alignRight="@id/gridButtons"
            android:background="@color/primary"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
